
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>注册</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="register">
        <h3>欢迎加入</h3>
        <div class="register-form">
            @using (Ajax.BeginForm("UserRegister", null, new AjaxOptions()
            {
                HttpMethod = "POST",
                OnBegin = "dig.Loading",
                OnSuccess = "dig.Success",
                OnFailure = "dig.Failure",
                OnComplete = "dig.Complete"
            }, new { @class = "form-signup" }))
            {
                <div class="form-group">
                    <label class="form-control">用户邮箱：</label>
                    <input type="email" name="email" id="email" class="form-control" placeholder="Your E-mail"/>
                </div>
                <div class="form-group">
                    <label class="form-control">用户名：</label>
                    <input type="text" name="username" id="username" class="form-control" placeholder="Your UserName" />
                </div>
                <div class="form-group">
                    <label class="form-control">密码：</label>
                    <input type="password" name="password" id="password" class="form-control" placeholder="Your Password" />
                </div>
                <div class="form-group">
                    <label class="form-control">确认密码：</label>
                    <input type="password" name="comfirmpwd" id="comfirmpwd" class="form-control" placeholder="Comfirm Password" />
                </div>
                <div class="form-group">
                    <label class="form-control">手机号码：</label>
                    <input type="text" name="phone" id="phone" class="form-control" placeholder="Your Phone" />
                </div>
                <div class="form-group">
                    <button class="form-control btn-primary" type="submit">注册</button>
                </div>
            }
        </div> 
    </div>
</body>
</html>
