
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <title>高校视频自学网-登录</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/animate.min.css" rel="stylesheet" />
    <link href="~/Content/style.min.css" rel="stylesheet" /><base  target="_blank"/>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    
</head>
<body class="gray-bg">
    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <h1 class="logo-name">Win</h1>
        </div>
        <h3>欢迎回来</h3>
    </div>
    <div class="">
        @using (Ajax.BeginForm("UserLogin", null, new AjaxOptions()
        {
            HttpMethod = "POST",
            OnBegin = "dig.Loading",
            OnSuccess = "dig.Success",
            OnFailure = "dig.Failure",
            OnComplete = "dig.Complete"
        }, new { @class = "m-t" }))
        {
            //@Html.AntiForgeryToken()
            <div class="form-group">
                <label class="form-control" for="email">用户邮箱：</label>
                <input type="email" class="form-control" placeholder="User-Email" name="email" id="email" />
            </div>
            <div class="form-group">
                <label class="form-control" for="pwd">密码：</label>
                <input type="password" class="form-control" placeholder="PassWord" name="pwd" id="pwd"/>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success block full-width m-b" >登录</button>
            </div>
            <p class="text-muted text-center"><a><small>忘记密码了？</small></a>| 没有账号？先<a href="/ComManage/User/Register">注册</a>一个吧</p>
        }
    </div>
    <script>
        if (window.top !== window.self)
        {
            window.top.location = window.location;
        }
    </script>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="http://tajs.qq.com/stats?sId=9051096" charset="UTF-8"></script>
</body>
</html>
